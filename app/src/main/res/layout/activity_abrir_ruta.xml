<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aescobar68.applecturas.abrir_rutaActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:paddingLeft="16dp"
       android:paddingTop="16dp"
       android:paddingRight="16dp">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAppearance="@style/TextAppearance.AppCompat.Small"
           android:text="En este Modulo el lector debera seleccionar la ruta a trabajar, recuerde siempre totalizar para verificar su trabajo, despues de seleccionar la ruta presione el boton << MONTAR RUTA >>."
           android:id="@+id/textView37"
           android:textColor="#020202" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
           android:text="SelecciÃ³n de Ruta"
           android:id="@+id/textView38"
           android:textColor="@color/abc_search_url_text_pressed"
           android:paddingTop="16dp"
           android:gravity="center_horizontal" />

       <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spRutas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
           android:layout_weight="0.5" />

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center_vertical">


           <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Montar Ruta"
            android:layout_weight="1"
            android:id="@+id/BtnAbrir"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:layout_below="@+id/spRutas"
            android:backgroundTint="@android:color/holo_orange_dark" />

           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Salir"
               android:id="@+id/ActualizaSalir"
               android:drawableLeft="@android:drawable/ic_menu_set_as"
               android:layout_weight="1"
               android:backgroundTint="@android:color/holo_green_light" />
       </TableRow>

   </LinearLayout>

</LinearLayout>
