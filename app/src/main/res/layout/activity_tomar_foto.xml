<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llyview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tomar_fotoActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:text="Previsualizacion de la lectura del medidor y/o causal de no lectura, por favor verificar con la lectura registrada."
        android:id="@+id/textView35"
        android:textColor="#010101"
        android:paddingLeft="16dp"
        android:paddingRight="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomar registro fotografico"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:id="@+id/btnTomaFoto"
            android:background="@android:color/holo_orange_dark"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grabar"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:id="@+id/btnGrabarFoto"
            android:background="@android:color/holo_purple"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@Copyright 2016 - www.soltic.com.co"
            android:id="@+id/textView30" />
    </TableRow>

</LinearLayout>
